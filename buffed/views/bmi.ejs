<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BMI Calculator</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="header-container">
      <a href ='/'><img class="buffed-icon" src="/icons/buffed_icon.svg" /></a>
      <img class="more-icon" src="/icons/more_icon.svg" onclick="dropdown()" />
    </div>
    <div class="dropdown dropdown-hidden" id="dropdown">
      <div class="dropdown-item"><a href="bmi">BMI calculator</a></div>
      <div class="dropdown-item">Change theme</div>
      <div class="dropdown-item"><a href="logout">Log out</a></div>
    </div>

    <div class="login-container">
      <div class="form-container">
        <p>Weight(kg):</p>
        <input type="number" id="weight" min="1" max="635" step="1" required />
        <p>Height(m):</p>
        <input
          type="number"
          id="height"
          min="0.1"
          max="3"
          step="0.1"
          required
        />
        <button onclick="calculate()" class="second-button">Calcuate</button>
        <p id="result">---</p>
        <p id="result2"></p>
      </div>
    </div>
    <script>
      function calculate() {
        let w = document.getElementById("weight").value;
        let h = document.getElementById("height").value;
        let bmi = Math.round((w / (h * h)) * 100) / 100;
        document.getElementById("result").innerHTML = bmi;
        if (bmi < 18.5) {
          document.getElementById("result2").innerHTML =
            "you're in the underweight range";
        } else if (bmi < 24.9) {
          document.getElementById("result2").innerHTML =
            "you're in the healthy weight range";
        } else if (bmi < 29.9) {
          document.getElementById("result2").innerHTML =
            "you're in the overweight range";
        } else {
          document.getElementById("result2").innerHTML =
            "you're in the obese range";
        }
      }


      function dropdown() {
            let dropdown = document.getElementById("dropdown");
            dropdown.classList.toggle("dropdown-shown");
            dropdown.classList.toggle("dropdown-hidden");
        }
    </script>
  </body>
</html>
